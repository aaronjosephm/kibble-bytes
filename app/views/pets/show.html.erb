<div class="container">
	<h1><%= @pet.name %></h1>
	<h1>Weight: <%= @pet.weight %></h1>

	<%= cl_image_tag @pet.photo, height: 300, width: 400, crop: :fill %>
    
    <% if @user == current_user %>

		<%= simple_form_for([@user,@pet]) do |f| %>
		  <!-- [...] -->
		  <%= f.input :name %>
		  <%= f.input :weight %>
		  <%= f.input :photo %>
		  <%= f.input :photo_cache, as: :hidden %>
		  <%= f.submit "Update", class: "btn btn-primary" %>
		  <!-- [...] -->
		<% end %>

	<% end %>
	<br/>
	<%= link_to user_pet_url(@user, @pet), method: :delete do %>
        <button class="btn btn-danger"">Delete</button></h1>
    <% end %>
</div>